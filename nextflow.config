params {
    // Input data
    fastq_dir               = "${projectDir}/data"
    samplesheet_csv         = "${projectDir}/samplesheet.csv"  
    matching_column         = 'sample_id'

    // aligned mutliple reference
    multi_ref_file          = "${projectDir}/primerschemes/genotype_reference_sequences.align.fasta"

    // pipeline running parameters
    normalize               = 200
    
    // Output directory
    outDir                  = "$projectDir/Results"

    // Primer scheme parameters
    scheme_directory        = "${projectDir}/primerschemes"
    scheme_name             = 'hbv-600'
    scheme_version          = 'V2.1.0L'
    medaka_model            = 'r1041_e82_400bps_hac_v4.3.0'
}

// Load base.config by default for all pipelines
includeConfig 'conf/base.config'
includeConfig 'conf/publish_dir.config'

profiles {
    slurm              { includeConfig 'conf/slurm.config'}
    hbv                { includeConfig 'conf/custom_hbv.config'}
}